<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>

<DialogPane fx:controller="view.MemberController" xmlns:fx="http://javafx.com/fxml">
    <headerText>Add Member</headerText>
    <content>
        <GridPane vgap="10" hgap="10">
            <Label text="Name: " GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="name" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Label text="Mail: " GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextArea fx:id="mail" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        </GridPane>
    </content>
</DialogPane>